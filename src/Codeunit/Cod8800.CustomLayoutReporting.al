    local procedure StoreRequestParameters(Parameters: Text)
    var
        OutStr: OutStream;
        ReportID: Integer;
    begin
        Evaluate(ReportID,RequestPageParametersHelper.GetReportID(Parameters));
        // Insert or Modify - based on if it exists already or not
